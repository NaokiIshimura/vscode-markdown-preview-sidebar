{
  "name": "markdown-previewer-in-extension-panel",
  "publisher": "nacn",
  "displayName": "Markdown Previewer in Extension Panel",
  "description": "Markdown preview in the VS Code sidebar or panel.",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "markdownPreviewContainer",
          "title": "Markdown Preview",
          "icon": "$(markdown)"
        }
      ]
    },
    "views": {
      "markdownPreviewContainer": [
        {
          "id": "markdownPreview",
          "name": "",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "markdownPreview.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "markdownPreview.refresh",
          "when": "view == markdownPreview",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "markdown-it": "^13.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NaokiIshimura/vscode-markdown-previewer-in-extension-panel.git"
  }
}
